<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_folder_wizard_form_view" model="ir.ui.view">
        <field name="name">create.folder.wizard.form</field>
        <field name="model">create.folder.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="folder_path"/>
                </group>
                <footer>
                    <button string="Create Folder" type="object" class="oe_highlight" icon="fa-folder-o"
                            name="button_create_folder"/>
                    <button string="Cancel" class="oe_link" icon="fa-times" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>