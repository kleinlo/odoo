<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mail_notification_layout" inherit_id="mail.mail_notification_layout">
            <xpath expr="//div[@style='color: #555555; font-size:11px;']" position="replace">
                <div style="color: #555555; font-size:11px;" t-if="bool(record.env['ir.config_parameter'].get_param('mommy.brand'))">
                    Powered by <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=email" t-att-style="'color: ' + (company.email_secondary_color or '#875A7B') + ';'">Odoo</a>
                    <span id="mail_unfollow">
                        |                        <a href="/mail/unfollow" style="text-decoration:none; color:#555555;">Unfollow</a>
                    </span>
                </div>
            </xpath>
        </template>


        <template id="mail_notification_light" inherit_id="mail.mail_notification_light">
            <xpath expr="//tr[last()]" position="replace">
                <tr>
                    <td align="center" style="min-width: 590px;" t-if="bool(record.env['ir.config_parameter'].get_param('mommy.brand'))">
                        Powered by <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=email" t-att-style="'color: ' + (company.email_secondary_color or '#875A7B') + ';'">Odoo</a>
                        <span id="mail_unfollow">
                        |                            <a href="/mail/unfollow" style="text-decoration:none; color:#555555;">Unfollow</a>
                        </span>
                    </td>
                </tr>
            </xpath>
        </template>
    </data>
</odoo>